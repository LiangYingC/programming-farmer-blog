    "highlight.js": "^11.6.0",
    "markdown-it": "^13.0.1",
    "next": "^14.2.31",
    "next-sitemap": "^3.1.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.6.0"
